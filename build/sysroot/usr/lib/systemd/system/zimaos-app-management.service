[Unit]
After=casaos-message-bus.service
After=docker.service
Description=ZimaOS App Management Service

[Service]
ExecStartPre=/usr/bin/zimaos-app-management -v
ExecStart=/usr/bin/zimaos-app-management -c /etc/casaos/app-management.conf --removeRuntimeIfNoNvidiaGPU true
PIDFile=/var/run/casaos/app-management.pid
Restart=always
Type=notify

[Install]
WantedBy=multi-user.target
